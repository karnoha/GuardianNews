<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_view_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_title"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/list_item_title_textsize"
        android:textStyle="bold"
        tools:text="This text is a just a placeholder for news title that can be very long" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_view_section"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:textColor="@android:color/black"

            tools:text="section" />

        <TextView
            android:id="@+id/list_view_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="8dp"
            android:textColor="@android:color/black"
            tools:text="2017-07-15" />

    </LinearLayout>

</LinearLayout>